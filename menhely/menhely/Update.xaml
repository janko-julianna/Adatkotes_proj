<Window x:Class="menhely.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:menhely"
        mc:Ignorable="d"
        Title="Update" Height="250" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Név"/>
            <TextBox x:Name="tbName"/>
            <Label Content="Életkor"/>
            <TextBox x:Name="tbAge"/>
            <Label Content="Típus"/>
            <TextBox x:Name="tbType"/>
            <Label Content="Örökbe fogadható"/>
            <CheckBox x:Name="cbAdoptable"/>
            <Button x:Name="btnUpdate" Height="25" Content="Módosítás" Click="btnUpdate_Click"/>
        </StackPanel>
    </Grid>
</Window>
